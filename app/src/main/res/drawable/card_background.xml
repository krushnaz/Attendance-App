<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- White background color -->
    <corners android:radius="8dp"/> <!-- Rounded corners with 8dp radius -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"/> <!-- Padding inside the shape -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Light gray border color -->
    <elevation
        android:color="#00000000"
        android:radius="4dp"/> <!-- Shadow effect for elevation (use only if API level is 21+) -->
</shape>
