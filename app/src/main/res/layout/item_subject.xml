<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <!-- Horizontal Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0"/>

    <!-- Table Row -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackgroundColor"
        android:paddingVertical="10dp">

        <!-- Serial Number -->
        <TextView
            android:id="@+id/tvSerialNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="1"
            android:textColor="@color/textPrimaryColor"
            android:textSize="16sp" />

        <!-- Subject Name -->
        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="8dp"
            android:text="Subject Name"
            android:textColor="@color/textPrimaryColor"
            android:textSize="16sp" />

        <!-- Teacher Name -->
        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="8dp"
            android:text="Teacher Name"
            android:textColor="@color/textPrimaryColor"
            android:textSize="16sp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- QR Code Button -->
            <ImageButton
                android:id="@+id/btnGenerateQRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/cardBackgroundColor"
                android:contentDescription="Generate QR Code"
                app:srcCompat="@drawable/ic_qr_code"
                app:tint="@color/primaryColorDark" />

            <!-- Activate Button -->
            <ImageButton
                android:id="@+id/btnActivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/cardBackgroundColor"
                android:contentDescription="Activate Subject"
                app:srcCompat="@drawable/ic_activate"
                app:tint="@color/red" />

            <!-- View Button -->
            <ImageButton
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/cardBackgroundColor"
                android:contentDescription="View"
                app:srcCompat="@drawable/ic_view"
                app:tint="@color/viewButtonColor" />




        </LinearLayout>
    </TableRow>

    <!-- Horizontal Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0"/>

    <!-- Add more rows dynamically -->

</TableLayout>
