<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <!-- Horizontal Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0" />

    <!-- Row for Room Item -->
    <TableRow
        android:background="@color/cardBackgroundColor"
        android:padding="5dp"
        android:layout_marginBottom="0dp">

        <!-- Serial Number -->
        <TextView
            android:id="@+id/tvSrNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000" />

        <!-- Room Name -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- View Button -->
            <ImageButton
                android:id="@+id/btnViewRoom"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@color/textWhite"
                android:contentDescription="View Room"
                app:srcCompat="@drawable/ic_view"
                app:tint="@color/viewButtonColor" />

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btnEditRoom"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@color/textWhite"
                android:contentDescription="Edit Room"
                app:srcCompat="@drawable/ic_edit"
                app:tint="@color/editButtonColor" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDeleteRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/textWhite"
                android:contentDescription="Delete Room"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@color/deleteButtonColor" />
        </LinearLayout>
    </TableRow>

    <!-- Horizontal Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0" />

</TableLayout>
