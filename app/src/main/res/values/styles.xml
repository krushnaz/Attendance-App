<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AppBarOverlay style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Stepper styles -->
    <style name="Stepper.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CircularShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textColorHint">@color/textSecondaryColor</item>
    </style>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSurface">@android:color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <!-- Define a custom Spinner theme -->
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <!-- Set the text color for the selected item in the Spinner -->
        <item name="android:textColor">#000000</item>
        <!-- Set the text color for the dropdown items in the Spinner -->
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="SpinnerItemTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">#FFFFFF</item> <!-- Set white background -->
        <item name="android:windowMinWidthMajor">80%</item> <!-- Dialog width -->
        <item name="android:windowMinWidthMinor">80%</item> <!-- Dialog width -->
        <item name="android:windowNoTitle">true</item> <!-- Hide title bar -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Transparent background to avoid borders -->
    </style>

</resources>
